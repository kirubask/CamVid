<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VideoFragment">

    <VideoView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/videoView"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/VideoBtn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/VideoBtn"
        android:background="@drawable/rounded_corner_button"
        android:text="Video"
        android:drawableRight="@drawable/ic_baseline_videocam_24"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@+id/videoView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gallery"
        >
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gallery"
        android:text="Gallery"
        android:background="@drawable/rounded_corner_button"
        android:textSize="19sp"
        android:drawableRight="@drawable/ic_baseline_create_new_folder_24"
        app:layout_constraintTop_toBottomOf="@+id/VideoBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>